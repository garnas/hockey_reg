{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>Register</h1>

    <div class="alert alert-success">You can still change the information entered here after your registration (e.g. the team name).</div>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.teamname) }}
        {{ form_row(registrationForm.email) }}

        {{ form_row(registrationForm.plainPassword, {
            label: 'Password',
        }) }}
        {{ form_row(registrationForm.tournamentLevel) }}
        {{ form_row(registrationForm.country) }}
        {{ form_row(registrationForm.agreeTerms) }}
        <button type="submit" class="btn btn-primary">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
