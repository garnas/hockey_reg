{% block body %}
    <h1>{{ team.teamname }}</h1>
    <div class="table-responsive">
        <table class="table table-group-divider table-sm">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ team.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ team.teamname }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ team.country }}</td>
            </tr>
            <tr>
                <th>Tournament Level</th>
                <td>{{ team.tournamentLevel }}</td>
            </tr>
            <tr>
                <th>Paid</th>
                <td>{{ team.paid ? '<i class="bi bi-check-circle-fill">' : '' }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ team.email }}</td>
            </tr>
            <tr>
                <th>Additional Emails</th>
                <td>{{ team.additionalEmails ? team.additionalEmails|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Email Verified</th>
                <td>{{ team.isVerified ? '<i class="bi bi-check-circle-fill">' : '<i class="bi bi-x-circle">' }}</td>
            </tr>
            </tbody>
        </table>
    </div>
    <a href="{{ path('app_team_edit', {'id': team.id}) }}" class="btn btn-primary">
        <i class="bi bi-pencil"></i> Edit Profile
    </a>

{% endblock %}
